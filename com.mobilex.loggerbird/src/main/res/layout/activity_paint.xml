<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paint.PaintActivity">

    <paint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </paint.PaintView>

    <View
        android:id="@+id/denemeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></View>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="290dp"
        android:layout_marginRight="40dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_done_black_24dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button_erase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="240dp"
        android:layout_marginRight="40dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_backspace_black_24dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="40dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_delete_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="40dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="3dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contextClickable="true"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_palette_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="40dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:visibility="invisible"
        android:src="@drawable/ic_brush_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/paint_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="40dp"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:fabSize="mini"
        android:backgroundTint="@color/colorBlack"
        app:borderWidth="0dp"
        android:src="@drawable/ic_add_white_24dp"/>


</FrameLayout>
