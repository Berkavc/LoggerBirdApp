<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/layout_jira"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.appcompat.widget.Toolbar
                app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/textView_jira_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/black"
                android:elevation="10dp"
                app:title="@string/textView_jira_title">
            </androidx.appcompat.widget.Toolbar>

            <ProgressBar
                android:id="@+id/progressbar_jira"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:max="100"
                android:progressTint="@color/black"
                android:progress="100">
            </ProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView_jira_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/textView_jira_project" />

                <Spinner
                    android:id="@+id/spinner_jira_project"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"/>




            <TextView
                android:id="@+id/textView_jira_issue_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/textView_jira_issue_type" />

            <Spinner
                android:id="@+id/spinner_jira_issue_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView_jira_reporter"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="@string/textView_jira_reporter" />
            <Spinner
                android:id="@+id/spinner_jira_issue_reporter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView_jira_linked_issues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="@string/textView_jira_linked_issue" />
            <Spinner
                android:id="@+id/spinner_jira_issue_linked_issues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView_jira_assignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="@string/textView_jira_assignee" />
            <Spinner
                android:id="@+id/spinner_jira_issue_assignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView_jira_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="@string/textView_jira_priority"
                android:layout_marginLeft="5dp" />
            <Spinner
                android:id="@+id/spinner_jira_issue_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_jira_summary"
                android:textSize="16sp"
                android:backgroundTint="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:textCursorDrawable="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:hint="@string/textView_jira_summary"
                android:layout_height="wrap_content">

            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_jira_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:backgroundTint="@color/colorBlack"
                android:textCursorDrawable="@color/colorBlack"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:hint="@string/textView_jira_description">

            </com.google.android.material.textfield.TextInputEditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attach_file_black_24dp">
                </ImageView>

                <TextView
                    android:layout_weight="6"
                    android:layout_gravity="top"
                    android:id="@+id/textView_jira_issue_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Attachments" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_jira_attachment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_jira_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/white"
                    android:text="@string/button_jira_cancel" />

                <Button
                    android:id="@+id/button_jira_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:text="@string/button_jira_create" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
