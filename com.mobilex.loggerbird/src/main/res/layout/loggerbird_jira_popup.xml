<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_jira"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFab"
    android:orientation="vertical"
    style="@style/Dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFab"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/textView_jira_title"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:menu="@menu/loggerbird_jira_menu"
            android:layout_width="match_parent"
            android:background="@color/colorFab"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/black"
            app:title="@string/textView_jira_title">
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/toolbar_shadow">
            </View>

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/textView_jira_project">
                        </TextView>

                        <Spinner
                            android:id="@+id/spinner_jira_project"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </Spinner>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_issue_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/textView_jira_issue_type" />

                        <Spinner
                            android:id="@+id/spinner_jira_issue_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:text="@string/textView_jira_summary">
                        </TextView>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editText_jira_summary"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:cursorVisible="true"
                            android:maxLines="3"
                            android:background="@null"
                            android:textCursorDrawable="@color/colorBlack"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/editText_jira_summary"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/textView_jira_description"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp">
                        </TextView>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editText_jira_description"
                            android:hint="@string/editText_jira_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="top"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@color/colorBlack"
                            android:background="@null"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:lines="5"
                            android:maxLines="5"
                            android:layout_marginEnd="5dp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_reporter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:baselineAligned="false"
                            android:text="@string/textView_jira_reporter"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_jira_issue_reporter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_linked_issues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/textView_jira_linked_issue" />
                        <Spinner
                            android:id="@+id/spinner_jira_issue_linked_issues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_assignee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/textView_jira_assignee" />
                        <Spinner
                            android:id="@+id/spinner_jira_issue_assignee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_priority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/textView_jira_priority" />
                        <Spinner
                            android:id="@+id/spinner_jira_issue_priority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_jira_attachments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="Attachments"
                            android:layout_marginBottom="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_attach_file_black_24dp">

                            </ImageView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_jira_attachment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/button_jira_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/secondaryColor"
                        android:textSize="18sp"
                        app:elevation="5dp"
                        android:textAllCaps="false"
                        android:layout_gravity="left"
                        android:background="@color/colorFab"
                        android:backgroundTint="@color/colorFab"
                        android:layout_marginRight="5dp"
                        android:text="@string/button_jira_cancel" />

                    <Button
                        android:id="@+id/button_jira_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:elevation="5dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/colorFab"
                        android:background="@color/colorFab"
                        android:text="@string/button_jira_create" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>