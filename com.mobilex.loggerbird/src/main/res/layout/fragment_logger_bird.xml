<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior"
    tools:context="fragments.FragmentLoggerBird">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/reveal_linear_layout_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_margin="50dp"
        android:elevation="8dp"
        app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior">

        <TextView
            android:id="@+id/textView_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="Send to E-Mail" />

        <TextView
            android:id="@+id/textView_share_jira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_jira_color_24dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="Share with Jira" />

        <TextView
            android:id="@+id/textView_discard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="Discard"
            android:drawableLeft="@drawable/ic_delete_sweep_black_24dp" />

        <!--   <TextView
               android:id="@+id/textView_dismiss"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawablePadding="16dp"
               android:textColor="@color/black"
               android:drawableLeft="@drawable/ic_clear_black_24dp"
               android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
               android:gravity="center_vertical"
               android:textSize="12sp"
               android:padding="8dp"
               android:text="Dismiss" /> -->

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>


    <TextView
        android:id="@+id/fragment_textView_counter_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_text_view"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        app:elevation="1dp"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_anchor="@id/fragment_floating_action_button_video"
        app:layout_anchorGravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/fragment_textView_counter_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_text_view"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="12sp"
        app:elevation="1dp"
        app:layout_anchor="@id/fragment_floating_action_button_audio"
        app:layout_anchorGravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/fragment_textView_size_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        app:elevation="1dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/secondaryColor"
        android:textSize="9sp"
        android:textStyle="bold"
        app:borderWidth="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/fragment_floating_action_button_video"
        app:layout_constraintEnd_toEndOf="@id/fragment_floating_action_button_video"/>

    <TextView
        android:id="@+id/fragment_textView_size_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/secondaryColor"
        android:textSize="9sp"
        android:textStyle="bold"
        app:borderWidth="0dp"
        app:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/fragment_floating_action_button_audio"
        app:layout_constraintEnd_toEndOf="@id/fragment_floating_action_button_audio"/>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_video"
        android:layout_margin="1dp"
        style="@style/AppTheme.FabSpeedDial"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:elevation="0dp"
        android:scaleType="fitCenter"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_videocam_black_24dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_audio"
        style="@style/AppTheme.FabSpeedDial"
        android:layout_margin="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="0dp"
        android:scaleType="fitCenter"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_mic_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_screenshot"
        style="@style/AppTheme.FabSpeedDial"
        android:layout_width="wrap_content"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        android:scaleType="fitCenter"
        app:borderWidth="0dp"
        app:elevation="1dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button"
        android:layout_margin="1dp"
        app:rippleColor="@color/secondaryColor"
        android:clickable="true"
        style="@style/AppTheme.Fab"
        app:borderWidth="0dp"
        app:elevation="1dp"
        app:fabSize="auto"
        android:scaleType="fitCenter"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loggerbird"
        android:focusable="true" />


</FrameLayout>
