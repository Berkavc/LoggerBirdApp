<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_layout"
    tools:context="fragments.FragmentLoggerBird">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        android:contextClickable="true"
        android:clickable="true"
        android:visibility="invisible"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_mic_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="3dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contextClickable="true"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:src="@drawable/ic_videocam_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorFab"
        android:visibility="invisible"
        android:src="@drawable/ic_photo_camera_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="30dp"
        app:pressedTranslationZ="12dp"
        android:elevation="6dp"
        app:fabSize="normal"
        android:backgroundTint="@color/black"
        app:borderWidth="0dp"
        android:src="@drawable/ic_add_white_24dp"/>

</FrameLayout>
