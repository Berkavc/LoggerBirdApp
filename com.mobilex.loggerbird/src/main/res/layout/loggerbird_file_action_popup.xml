<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_loggerbird_file_action_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cookieBarColor"
    android:padding="8dp">
    <TextView
        android:id="@+id/textView_files_action_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/files_action_limit"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
            android:id="@+id/textView_files_action_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/files_action_discard"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_files_action_limit"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/textView_files_action_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/files_action_share"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_files_action_limit"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

