<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trello_calendar_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/calendarView_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

        <Button
            android:id="@+id/button_trello_calendar_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/button_CalendarView_ok"
            app:layout_constraintEnd_toEndOf="@id/calendarView_start_date"
            app:layout_constraintBottom_toBottomOf="@id/calendarView_start_date"
            />

        <Button
            android:id="@+id/button_trello_calendar_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@null"
            android:text="@string/button_CalendarView_cancel"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toStartOf="@id/button_trello_calendar_ok"
            app:layout_constraintBottom_toBottomOf="@id/calendarView_start_date"
            />

</androidx.constraintlayout.widget.ConstraintLayout>